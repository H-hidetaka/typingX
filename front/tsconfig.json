{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "@types/node",
      "@nuxtjs/axios",
      "@nuxtjs/vue-app",
      "@nuxt/types",
      "./types"
    ]
  },
  // "include": [
  //   "types/**/*",
  //   "components/**/*",
  //   "layouts/**/*",
  //   "middleware/**/*",
  //   "pages/**/*",
  //   "plugins/**/*",
  //   "server/**/*",
  //   "store/**/*"
  // ],
  // "exclude": [
  //   "node_modules",
  //   ".nuxt",
  //   "dist"
  // ]
}
